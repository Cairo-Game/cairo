{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["webpack/*"]
        },
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}
